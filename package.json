{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:production": "nest build; npm prune --production; cp -R .env dist node_modules production",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=production nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "typeorm": "NODE_ENV=development node --require ts-node/register ./node_modules/typeorm/cli",
    "migrate:up": "npm run typeorm migration:run",
    "migrate:down": "npm run typeorm migration:revert",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "NODE_ENV=test jest --runInBand --silent --detectOpenHandles",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --silent --detectOpenHandles",
    "test:cov": "NODE_ENV=test jest --coverage --runInBand --silent --detectOpenHandles",
    "test:debug": "NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'"
  },
  "dependencies": {
    "@nestjs/common": "7.0.11",
    "@nestjs/core": "7.0.11",
    "@nestjs/graphql": "7.3.7",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "7.0.11",
    "@nestjs/swagger": "^4.5.12",
    "@nestjs/typeorm": "^7.1.0",
    "apollo-server": "2.14.2",
    "apollo-server-express": "2.14.2",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "dotenv": "^8.2.0",
    "graphql": "14.6.0",
    "graphql-subscriptions": "1.1.0",
    "js-sha512": "^0.8.0",
    "mysql2": "^2.1.0",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@nestjs/cli": "7.1.5",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.11",
    "@types/express": "4.17.6",
    "@types/js-sha512": "^0.7.0",
    "@types/node": "12.12.31",
    "@types/passport-google-oauth20": "^2.0.3",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "2.0.9",
    "@types/ws": "7.2.4",
    "@typescript-eslint/eslint-plugin": "^3.0.0",
    "@typescript-eslint/parser": "^3.0.0",
    "commitizen": "^4.1.2",
    "coveralls": "^3.1.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "jest-html-reporter": "^3.1.3",
    "jest-junit": "^11.0.1",
    "prettier": "2.0.5",
    "pretty-quick": "^2.0.1",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-loader": "7.0.4",
    "ts-node": "^8.10.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "^3.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "tsconfig.json",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "extends": [
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "overrides": [
      {
        "files": [
          "src/**/*.ts"
        ],
        "excludedFiles": "*.js"
      }
    ],
    "rules": {
      "@typescript-eslint/interface-name-prefix": "off",
      "@typescript-eslint/explicit-function-return-type": "error",
      "@typescript-eslint/no-explicit-any": "error",
      "@typescript-eslint/no-floating-promises": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/assets/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test/results",
          "outputName": "report.xml"
        }
      ],
      [
        "jest-html-reporter",
        {
          "pageTitle": "Test Report",
          "outputPath": "test/results/report.html"
        }
      ]
    ],
    "coverageReporters": [
      "lcovonly",
      "html",
      "text"
    ],
    "coverageDirectory": "test/coverage",
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npx pretty-quick --staged && npx jest --passWithNoTests",
      "pre-push": "npm run build"
    }
  }
}
